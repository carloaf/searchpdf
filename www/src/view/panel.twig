{# Este template agora é o "recheio" do base.twig #}
{% extends "base.twig" %}

{% block content %}
<div class="container search-container my-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-light">{{ lang.main_title ?? 'Pesquisa de Documentos' }}</h1>
        <p class="lead text-muted">Utilize a busca abaixo para encontrar documentos.</p>
    </div>
      
    <!-- Bloco de estatísticas com placeholders -->
    <div class="search-stats text-muted mb-4">
        <span><i class="fas fa-history me-1"></i> Total de Buscas: <strong id="stats-total">...</strong></span>
        <span><i class="fas fa-calendar-week me-1"></i> Buscas na Última Semana: <strong id="stats-week">...</strong></span>
        <span>
            <i class="fas fa-file-pdf me-1"></i> Último Arquivo Indexado: <strong id="stats-last-file">...</strong>
            <button type="button" class="btn btn-sm btn-admin-login ms-2" id="btn-admin-login" title="Acesso Admin/Upload" data-bs-toggle="modal" data-bs-target="#adminLoginModal">
                <i class="fas fa-key"></i>
            </button>
        </span>
    </div>

    <!-- Barra de Busca -->
    <div class="input-group input-group-lg search-bar-wrapper mb-4">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
        <input type="text" class="form-control" id="input-search" placeholder="Digite sua busca...">
        <button class="btn btn-light border" type="button" data-bs-toggle="collapse" data-bs-target="#search-options">
            <i class="fas fa-sliders-h"></i>
        </button>
        <button class="btn btn-success" id="btn-search" type="button">Buscar</button>
    </div>

    <!-- Opções de Busca (Colapsável) -->
    <div class="collapse" id="search-options">
        <div class="card card-body search-options-card border-0 mb-4">
            <div class="row">
                <div class="col-md-6">
                    <strong>Tipo de Busca:</strong>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="search-type" id="chk-structure-file" >
                        <label class="form-check-label" for="chk-structure-file">Nomes de arquivos e pastas</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="search-type" id="chk-search-file" checked>
                        <label class="form-check-label" for="chk-search-file">Conteúdo dos arquivos</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <strong>Opções:</strong>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk-ignore-case">
                        <label class="form-check-label" for="chk-ignore-case">Diferenciar maiúsculas/minúsculas</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk-exact-match">
                        <label class="form-check-label" for="chk-exact-match">Pesquisar palavra inteira</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Área da Árvore de Arquivos e Resultados -->
    <div class="row equal-height">
        <div class="col-lg-5">
            <div id="file-tree-card" class="card">
                <div class="card-header bg-primary">
                    <i class="fas fa-folder-tree me-2"></i> Selecione os arquivos ou pastas
                </div>
                <div class="card-body file-tree-container">
                    {{ treeHtml|raw }} {# <<-- RENDERIZA A ÁRVORE HTML #}
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div id="search-results-container" class="pt-0">        
                <!-- Área de Gráficos (Modificada para layout vertical) -->
                <div id="chart-placeholder" class="card">
                    <div class="card-header bg-primary">
                        <i class="fas fa-chart-bar me-2"></i> Buscas Realizadas (Últimos 7 Dias)
                    </div>
                    <div class="card-body">
                        <!-- Container do gráfico de buscas diárias -->
                        <div class="chart-wrapper">
                            <canvas id="daily-searches-chart" class="chart-canvas"></canvas>
                        </div>
                    </div>
                </div>
                
                <div id="chart-terms-placeholder" class="card mt-4">
                    <div class="card-header bg-primary">
                        <i class="fas fa-search me-2"></i> Termos Técnicos Mais Pesquisados
                    </div>
                    <div class="card-body">
                        <!-- Container do gráfico de termos mais pesquisados -->
                        <div class="chart-wrapper">
                            <canvas id="top-terms-chart" class="chart-canvas"></canvas>
                        </div>
                    </div>
                </div>
                
                
                <!-- Containers para o gráfico de distribuição de documentos -->
                <div id="document-distribution-chart-container" class="card mt-4">
                    <div class="card-header bg-primary">
                        <i class="fas fa-file-alt me-2"></i> Distribuição de Documentos por Mês
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <select id="year-selector" class="form-select">
                                <option value="all" selected>Todos os anos</option>
                            </select>
                        </div>
                        <div class="chart-wrapper">
                            <canvas id="document-distribution-chart" class="chart-canvas"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div> <!-- Fim do .search-container -->

<!-- Modal de Login Admin -->
<div class="modal fade" id="adminLoginModal" tabindex="-1" aria-labelledby="adminLoginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="adminLoginModalLabel">
                    <i class="fas fa-lock me-2"></i>Acesso Administrativo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <div id="login-alert" class="alert alert-danger d-none" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i><span id="login-error-msg"></span>
                </div>
                <form id="admin-login-form">
                    <div class="mb-3">
                        <label for="admin-username" class="form-label">
                            <i class="fas fa-user me-1"></i>Usuário
                        </label>
                        <input type="text" class="form-control" id="admin-username" name="username" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="admin-password" class="form-label">
                            <i class="fas fa-key me-1"></i>Senha
                        </label>
                        <input type="password" class="form-control" id="admin-password" name="password" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary" id="btn-do-login">
                            <i class="fas fa-sign-in-alt me-2"></i>Entrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<button type="button" class="theme-settings-button" id="theme-settings-button" aria-label="Abrir configurações de cores">
    <i class="fas fa-cog"></i>
</button>

<div class="theme-settings-panel card shadow" id="theme-settings-panel" aria-hidden="true">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div>
            <i class="fas fa-palette me-2"></i>
            <span>Personalização de cores</span>
        </div>
        <button type="button" class="btn-close" id="theme-settings-close" aria-label="Fechar configurações"></button>
    </div>
    <div class="card-body">
        <p class="text-muted small mb-3">Escolha um perfil de cores para aplicar imediatamente ao painel.</p>
        <div class="theme-options-list">
            <button type="button" class="theme-option" data-theme="default" aria-pressed="false">
                <span class="theme-option__swatch">
                    <span style="background-color:#2e7d32"></span>
                    <span style="background-color:#ff8f00"></span>
                    <span style="background-color:#f5f7fa"></span>
                </span>
                <span class="theme-option__label">Verde clássico</span>
                <span class="theme-option__check"><i class="fas fa-check"></i></span>
            </button>
            <button type="button" class="theme-option" data-theme="ocean" aria-pressed="false">
                <span class="theme-option__swatch">
                    <span style="background-color:#1e88e5"></span>
                    <span style="background-color:#29b6f6"></span>
                    <span style="background-color:#f1f8ff"></span>
                </span>
                <span class="theme-option__label">Azul oceano</span>
                <span class="theme-option__check"><i class="fas fa-check"></i></span>
            </button>
            <button type="button" class="theme-option" data-theme="midnight" aria-pressed="false">
                <span class="theme-option__swatch">
                    <span style="background-color:#263238"></span>
                    <span style="background-color:#ff7043"></span>
                    <span style="background-color:#37474f"></span>
                </span>
                <span class="theme-option__label">Noite urbana</span>
                <span class="theme-option__check"><i class="fas fa-check"></i></span>
            </button>
            <button type="button" class="theme-option" data-theme="sunset" aria-pressed="false">
                <span class="theme-option__swatch">
                    <span style="background-color:#d84315"></span>
                    <span style="background-color:#ffb300"></span>
                    <span style="background-color:#fff8e1"></span>
                </span>
                <span class="theme-option__label">Pôr do sol</span>
                <span class="theme-option__check"><i class="fas fa-check"></i></span>
            </button>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <button type="button" class="btn btn-sm btn-outline-secondary" id="theme-settings-close-bottom">Fechar</button>
            <button type="button" class="btn btn-sm btn-outline-danger" id="theme-reset-button">Restaurar padrão</button>
        </div>
    </div>
</div>
{% endblock %}